<h1>Update <%= @parcel.name() %></h1>

<form action="/parcels/<%= @parcel.id() %>" method="post">
  <input name="_method" type="hidden" value="patch">

  <label for="parcel_name">Rename parcel</label>
  <input id="name" name="parcel_name" type="text">

  <label for="parcel_height">Change Height</label>
  <input id="height" name="parcel_height" type="text">

  <label for="parcel_width">Change width</label>
  <input id="width" name="parcel_width" type="text">

  <label for="parcel_weight">Change Weight</label>
  <input id="weight" name="parcel_weight" type="text">

  <button type="submit">Update</button>
</form>

<form action="/parcels/<%= @parcel.id() %>" method="post">
  <input name="_method" type="hidden" value="delete">

  <button type="submit">Delete parcel</button>
</form>

<p><a href="/parcels">Return to parcel list</a></p>
